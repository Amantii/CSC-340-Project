<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" fx:id="createAccountPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginView.MainController">
   <children>
      <AnchorPane layoutX="250.0" prefHeight="400.0" prefWidth="250.0" style="-fx-background-color: #ECE4E4#ECE4E4;">
         <children>
            <Text layoutX="25.0" layoutY="75.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: serif;" text="Create Account" textAlignment="CENTER" wrappingWidth="200.0">
               <font>
                  <Font name="Arial Hebrew" size="30.0" />
               </font>
            </Text>
            <TextField fx:id="username" layoutX="32.0" layoutY="103.0" onAction="#patientDetails" prefHeight="27.0" prefWidth="186.0" promptText="Name" style="-fx-font-family: serif;" />
            <TextField fx:id="email" layoutX="32.0" layoutY="149.0" onAction="#patientDetails" prefHeight="27.0" prefWidth="186.0" promptText="E-mail" style="-fx-font-family: serif;" />
            <PasswordField fx:id="password" layoutX="32.0" layoutY="200.0" onAction="#patientDetails" prefHeight="27.0" prefWidth="186.0" promptText="Password" style="-fx-font-family: serif;" />
            <Button fx:id="signIn" layoutX="147.0" layoutY="278.0" mnemonicParsing="false" onAction="#returnToLogin" style="-fx-font-family: serif;" text="Sign In" />
            <Button fx:id="signUp" layoutX="49.0" layoutY="278.0" mnemonicParsing="false" onAction="#patientDetails" style="-fx-font-family: serif;" text="Sign Up" />
         </children>
      </AnchorPane>
      <AnchorPane prefHeight="400.0" prefWidth="250.0" style="-fx-background-color: #D5B2B2#D5B2B2;">
         <children>
            <ImageView fitHeight="150.0" fitWidth="208.0" layoutX="23.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/img/Aceso.png" />
                </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
